<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:ui="nativescript-datetimepicker">
  <StackLayout class="p-20">
    <!-- <Label text="{{ message }}" class="t-20 text-center c-black" textWrap="true"/> -->
    <Button text="Select a date and time" tap="onDatetimeTap" />
    <Label text="{{dateTime}}" class="t-20 text-center c-black" />

    <Button text="Select a date" tap="onDateTap" />
    <Label text="{{date}}" class="t-20 text-center c-black" />

    <Button text="Select a time" tap="onTimeTap" />
    <Label text="{{time}}" class="t-20 text-center c-black" />

    <Button text="Select a date and time (min - max)" tap="onDatetimeMinMaxTap" />
    <Label text="{{dateTimeMinMax}}" class="t-20 text-center c-black" />

    <Button text="Select a date (min - max)" tap="onDateMinMaxTap" />
    <Label text="{{dateMinMax}}" class="t-20 text-center c-black" />

    <Button text="Select a time (min - max)" tap="onTimeMinMaxTap" />
    <Label text="{{timeMinMax}}" class="t-20 text-center c-black" />
  </StackLayout>
</Page>